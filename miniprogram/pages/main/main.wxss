.my-list {
    width: 700rpx;
    margin: 0 auto 20rpx;
    overflow: hidden;
    background: #fff;
    border-radius: 20rpx;
    box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.03);
}

.my-list .item {
    width: 100%;
    height: 107rpx;
    font-size: 28rpx;
    color: #000;
    border-bottom: 1px solid #f2f3f7;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.my-list .item::after {
    content: '';
    display: block;
    width: 8px;
    height: 8px;
    position: absolute;
    right: 40rpx;
    top: 50%;
    border-bottom: 1px solid #bcbcbc;
    border-left: 1px solid #bcbcbc;
    transform: translateY(-50%) rotate(-135deg);
}

.my-list .item .name {
    margin-left: 30rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.my-list .item .name::before {
    width: 45rpx;
    height: 45rpx;
    display: block;
    content: '';
    margin-right: 35rpx;
    background: url('') no-repeat left top;
    background-size: cover;
}

