/* pages/library/library.wxss */

page{
    background: #e8e8f1;
}
#orderList {}

#orderList .head-table-list {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 80rpx;
    background: #fff;
    box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
}

#orderList .head-table-list .li {
    width: 20%;
    height: 80rpx;
    font-size: 14px;
    color: #002469;
    text-align: center;
    line-height: 80rpx;
}

#orderList .head-table-list .li.active {
    position: relative;
    color: #2fc38f;
}

#orderList .head-table-list .li.active::after {
    position: absolute;
    bottom: 0;
    left: 50%;
    z-index: 2;
    transform: translateX(-50%);
    display: block;
    content: '';
    width: 60rpx;
    height: 4rpx;
    background: #2fc38f;
}


/* 内容 */

.order-ul {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;padding: 20rpx;box-sizing: border-box;
}
.order-ul .item-box{
    display: flex;flex-direction: column;flex: 1;
    background: #fff;
    box-shadow: 0 0 12px rgba(179, 177, 177, 0.6);
    border-radius: 20rpx;
    margin-bottom: 20rpx;
}
.order-ul .item-box .head-box{
    width: 100%;height: 40px;
    padding: 0 40rpx;box-sizing: border-box;
    display: flex;justify-content: space-between;align-items: center;
    font-size: 12px;color: rgb(0, 0, 0);font-weight: bold;
}
.order-ul .li {
    overflow: hidden;
    padding:0 20rpx 20rpx;box-sizing: border-box;
    display: flex;justify-content: flex-start;align-items: stretch;
}
.order-ul .li .head-box{
    width: 100%;height: 40px;
    padding: 0 20rpx;box-sizing: border-box;
    display: flex;justify-content: space-between;align-items: center;
    font-size: 12px;color: #ccc;font-weight: bold;
}
.order-ul .li .img-box{
    min-width: 200rpx;height: 200rpx;max-width: 200rpx;
    display: flex;justify-content: center;align-items: center;
    padding: 16rpx;box-sizing: border-box;
    overflow: hidden;
}

.order-ul .li .title {
    display: flex;
    justify-content: flex-start;
    flex-direction: column;
    position: relative;
}

.order-ul .li .title .value {
    display: block;
    overflow: hidden;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    line-clamp: 1;
    -webkit-box-orient: vertical;
    font-size: 15px;
    color: #010101;
    font-weight: bold;
    margin-bottom: 12rpx;
}
.order-ul .li .title .desc {
    font-size: 11px;
    color: #747272;
    display: block;
    overflow: hidden;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
}
.order-ul .li .title .item {
    display: flex;justify-content: flex-start;align-items: center;height: 50rpx;
}
.order-ul .li .title .lable {
    min-width: 160rpx;font-size: 12px;color: rgb(141, 106, 106);
}
.wx-switch-input{width:42px !important;height:20px !important;}
.wx-switch-input::before{width:42px !important;height: 20px !important;}
.wx-switch-input::after{width: 18px !important;height: 18px !important;}
.order-ul .li .title .l-value {
   font-size: 12px;color: red;
}
.order-ul .li .title .keen-on {
    /* min-width: 110rpx; */
    display: flex;
    justify-content: flex-end;
    align-items: center;
    position: absolute;bottom: 0;right: 0;
}

.order-ul .li .title .keen-on .like {
    width: 36rpx;
    height: 32rpx;
    background: url(https://6465-demo-q7d1r-1302081669.tcb.qcloud.la/classify/like-icon.png) center top no-repeat;
    background-size: 36rpx auto;
    margin: 0 8px;
}

.order-ul .li .title .keen-on .like.active {
    background: url(https://6465-demo-q7d1r-1302081669.tcb.qcloud.la/classify/like-icon.png) center bottom no-repeat;
    background-size: 36rpx auto;
}

.order-ul .li .title .keen-on .share {
    width: 36rpx;
    height: 32rpx;
    background: url(https://6465-demo-q7d1r-1302081669.tcb.qcloud.la/classify/share-icon.png) center top no-repeat;
    background-size: 36rpx auto;
    position: relative;
}
.add{
    position: fixed;z-index: 99999;
    bottom: 30rpx;right: 30rpx;
    /* background: #fff; */
    border-radius: 20rpx;padding: 12rpx;box-sizing: border-box;
    font-size: 50px;color: #00FF00;
    width: 120rpx;height: 120rpx;
    display: flex;justify-content: center;align-items: center;
}